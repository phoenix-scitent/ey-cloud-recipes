#!/bin/bash

DB_TYPE="<%= @db_type %>"
APP_NAME="<%= @app_name %>"
BACKUP_EXT="<%= @backup_ext %>"
USER="<%= @user %>"
ACTION=$1

gem install fog -v 1.19.0

latest=$(eybackup -c aha_prod.backups.yml -e mysql -l aha | tail -1 | cut -d ' ' -f 1)

eybackup -c /root/aha_prod.backups.yml -e mysql --restore ${latest}

echo "Completed database restore at: $(date)" >> /home/$USER/clone_database_restore.log